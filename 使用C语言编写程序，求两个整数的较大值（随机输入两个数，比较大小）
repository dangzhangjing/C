1.使用if语句
#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
int Max(int i, int j)
{
    int tmp;
    if (i > j)
        return tmp= i;
    else
        return tmp=j;
}
int main()
{
    int tmp = 0;
    int x, y;
    printf("x: y: ");
    scanf("%d %d", &x, &y);
    tmp = Max(x, y);
    printf("%d\n", tmp);
    system("pause");
    return 0;
}

2.使用条件操作符
#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int tmp = 0;
    int x, y;
    printf("x: y: ");
    scanf("%d %d", &x, &y);
    tmp = x > y ? x : y;//条件操作符
    printf("%d\n", tmp);
    system("pause");
    return 0;
}
